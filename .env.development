# Environment
NODE_ENV=development

# Database URLs
MONGODB_URL=mongodb://jbx:jbx_password@localhost:27017/jbx
POSTGRES_URL=postgresql://jbx:jbx_password@localhost:5432/jbx

# Redis
REDIS_URL=redis://localhost:6379

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenAI API
OPENAI_API_KEY=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Proxy Configuration (optional)
PROXY_URL=

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Rate Limiting
MAX_APPLICATIONS_PER_DAY=50
MAX_APPLICATIONS_PER_PLATFORM=10
DELAY_BETWEEN_APPLICATIONS=60

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
