# Environment
NODE_ENV=production

# Database URLs
MONGODB_URL=mongodb://jbx:${MONGODB_PASSWORD}@mongodb.production:27017/jbx
POSTGRES_URL=postgresql://jbx:${POSTGRES_PASSWORD}@postgres.production:5432/jbx

# Redis
REDIS_URL=redis://redis.production:6379

# RabbitMQ
RABBITMQ_URL=amqp://jbx:${RABBITMQ_PASSWORD}@rabbitmq.production:5672

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# OpenAI API
OPENAI_API_KEY=${OPENAI_API_KEY}

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Proxy Configuration (optional)
PROXY_URL=${PROXY_URL}

# Frontend URL
FRONTEND_URL=https://jbx.yourdomain.com

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/data/uploads

# Rate Limiting
MAX_APPLICATIONS_PER_DAY=100
MAX_APPLICATIONS_PER_PLATFORM=20
DELAY_BETWEEN_APPLICATIONS=30

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/jbx/app.log
